<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myapp.kr_pc.crickettracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cric_track_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.myapp.kr_pc.crickettracker.view.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.myapp.kr_pc.crickettracker.view.MainActivity" />
        <activity
            android:name="com.myapp.kr_pc.crickettracker.view.MatchesActivity"
            android:label="@string/title_activity" />
        <activity
            android:name="com.myapp.kr_pc.crickettracker.view.FeedbackActivity"
            android:label="@string/feedback" />
        <activity
            android:name="com.myapp.kr_pc.crickettracker.view.AboutUsActivity"
            android:label="@string/about_us" />
        <activity
            android:name="com.myapp.kr_pc.crickettracker.view.MyProfileActivity"
            android:label="@string/my_profile" />
        <activity
            android:name="com.myapp.kr_pc.crickettracker.view.EditProfileActivity"
            android:label="@string/edit_profile" />
        <activity
            android:name="com.myapp.kr_pc.crickettracker.view.PlayerSearchActivity"
            android:label="@string/search_player" />
        <activity
            android:name="com.myapp.kr_pc.crickettracker.view.PlayerProfileActivity"
            android:label="@string/player_profile" />
        <activity android:name="com.myapp.kr_pc.crickettracker.view.FixturesActivity"
            android:label="@string/fixtures"></activity>
    </application>

</manifest>