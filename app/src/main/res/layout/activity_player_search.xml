<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kr_pc.crickettracker.view.PlayerSearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/player_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"
            android:hint="@string/enter_player_name" />

        <Button
            android:id="@+id/player_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/search_player" />

        <TextView
            android:id="@+id/player_not_found"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player not found"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:background="@color/black"
            android:visibility="gone"
            android:textSize="25sp"/>
        <ListView
            android:id="@+id/player_list"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>
