<?xml version="1.0" encoding="utf-8"?>

<!-- Developed using, https://stackoverflow.com/questions/37411637/change-spinner-dropdown-icon -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- FIXME: set color on click -->
    <item android:drawable="@color/colorAccent" android:state_selected="true" />
    <item>
        <layer-list>
            <!-- Background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                </shape>
            </item>

            <!-- The gradient with stroke. -->
            <item>
                <shape>
                    <gradient android:angle="90" android:centerColor="#00000000" android:dither="true" android:endColor="#00000000" android:startColor="#5590CAF9" />
                    <stroke android:width="0.33dp" android:color="@color/colorPrimary" />
                    <corners android:radius="0dp" />
                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>

            <!-- The arrow -->
            <!--<item android:right="5dp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/down_arrow_png_48x32" />
            </item>-->
        </layer-list>
    </item>
</selector>